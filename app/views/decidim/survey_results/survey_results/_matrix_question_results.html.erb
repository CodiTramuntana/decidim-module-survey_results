<div class="answers-chart">
  <canvas
    class="<%= results.question_type %>-chart"
    data-labels="<%= results.x_labels %>"
    data-datasets="<%= results.datasets.to_json %>"
  ></canvas>
</div>

<table>
  <thead>
    <th>Valor</th>
    <% results.datasets.each do |ds| %>
      <th><%= ds[:label] %></th>
    <% end -%>
  </thead>
  <tbody>
    <% results.x_labels.each_with_index do |label, idx| %>
      <tr>
        <td><%= label %></td>
        <% results.datasets.each do |ds| %>
          <td><%= ds[:data][idx] %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>
